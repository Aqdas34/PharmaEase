    <div class="bg-light py-3 mt-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a href="/" class="text-decoration-none home-tag">Home</a> <span class="mx-2 mb-0">/</span>
                    <strong class="text-black">Contact</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section mt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="h3 my-5 text-black">Get In Touch</h2>
                </div>
                <div class="col-md-12">
                    <div class="container form-class">
                        <div class="col-md-12">
                            <form  id="contactForm">
                                <div class="p-3 p-lg-5 border">
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label for="c_fname" class="text-black">First Name <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="c_fname" name="c_fname" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="c_lname" class="text-black c_lname">Last Name <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="c_lname" name="c_lname" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12 mt-4">
                                            <label for="c_email" class="text-black">Email <span class="text-danger">*</span></label>
                                            <input type="email" class="form-control mt-2" id="c_email" name="c_email" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12 mt-4">
                                            <label for="c_subject" class="text-black">Subject</label>
                                            <input type="text" class="form-control mt-2" id="c_subject" name="c_subject" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12 mt-4">
                                            <label for="c_message" class="text-black mt-2">Message</label>
                                            <textarea name="c_message" id="c_message" cols="30" rows="7" class="form-control" required></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row mt-3">
                                        <button  onclick="submitForm()" class="btn btn-primary btn-lg btn-block send-message" value="Send Message">Send Message</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="office-container">
                        <div>
                            <h1 class="text-white office-heading">OFFICES</h1>
                            <div class="offices">
                                <div class="office-one">
                                    <span class="d-block">Pakistan</span>
                                    <p>Street07 Cavalry Ground Lahore Cantt</p>
                                </div>
                                <div class="office-two">
                                    <span class="d-block">UK</span>
                                    <p>203 Fake Mountain View London</p>
                                </div>
                                <div class="office-three">
                                    <span class="d-block">USA</span>
                                    <p>Los Angeles</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    

    



 <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script>
     function submitForm() {
         var data = $("#contactForm").serialize();
         $.ajax({
             type: 'POST',
             url: '/Contact/GetContact',
             data: data,
             success: function () {
                    alert("Contact has been saved");
                                                     
             },
             error: function () {
                 alert('Failed to receive the Data');
             }
         })
     }

 </script> 