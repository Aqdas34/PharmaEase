<div id="productList" class="container py-5">
    <div class="row">
        @foreach (var c in @Model)
        {
            <div class="col-md-4 col-sm-6 col-mb-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="@c.ImagePath" class="card-img-top" style="aspect-ratio: 3/2; object-fit:contain;" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@c.Name</h5>
                        <p class="card-text">@c.Price</p>

                        <form method="post" action="/order/AddToCart">
                            <input type="hidden" name="id" value="@c.Id" />
                            <div class="form-group">
                                <label for="quantity_@c.Id">Quantity:</label>
                                <input type="number" name="quantity" id="quantity_@c.Id" class="form-control" value="1" min="1" />
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>